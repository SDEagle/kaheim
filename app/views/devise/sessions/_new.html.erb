<%= bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <%= f.email_field :email,
                    placeholder: User.human_attribute_name(:email),
                    class: 'text_field',
                    label: false %>
  <%= f.password_field :password,
                    placeholder: User.human_attribute_name(:password),
                    class: 'text_field',
                    label: false %>

  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me %>
  <% end -%>

  <div class="form-actions">
    <%= f.submit t('devise.basic.sign_in', :default => 'Sign in'), :class => 'btn btn-primary' %><br />
    <%= render 'devise/shared/links', no_sign_in: true %>
  </div>

<% end %>
