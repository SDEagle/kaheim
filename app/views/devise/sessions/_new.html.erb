<%= bootstrap_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f| %>

  <%= f.email_field :email, :class => 'text_field', :label => false %>
  <%= f.password_field :password, :class => 'text_field', :label => false %>

  <% if devise_mapping.rememberable? -%>
    <%= f.check_box :remember_me %>
  <% end -%>

  <div class="form-actions">
    <%= f.submit t("helpers.links.sign_in"), :class => 'btn btn-primary' %>
    <%= render "devise/shared/links" %>
  </div>

<% end %>
