<%= custom_bootstrap_form_for @request do |f| %>
    <div class="edit">

      <div class="row">
        <%= f.text_area :title,
                         input_group_wrapper_class: 'input-group-lg col-md-12',
                         wrapper_class: 'title',
                         class: 'short-description',
                         append: (@request.title ? 140 - @request.title.length : 140).to_s,
                         placeholder: t('helpers.request.help.title'),
                         hide_label: true %>
      </div>

      <hr/>

      <div class="row">
        <div class="col-md-8">
          <%= f.text_area :description, wrapper_class: 'description', hide_label: true, placeholder: t('helpers.request.help.description') %>
        </div>

        <div class="col-md-4">
          <div class="info">
            <div class='form-group gender'>
              <%= f.radio_button :gender, 'dontcare', checked: true, label: '<span class="gender-label"><i class="fa fa-male"></i>/<i class="fa fa-female"></i></span>'.html_safe %>
              <%= f.radio_button :gender, 'female', label: '<span class="gender-label"><i class="fa fa-female"></i></span>'.html_safe %>
              <%= f.radio_button :gender, 'male', label: '<span class="gender-label"><i class="fa fa-male"></i></span>'.html_safe %>
            </div>
            <%= f.localized_text_field :from_date,
                                       'data-behaviour' => 'datepicker',
                                       input_group_wrapper_class: 'input-group-sm',
                                       prepend: t('activerecord.attributes.request.from_date'),
                                       hide_label: true %>
            <%= f.localized_text_field :to_date,
                                       'data-behaviour' => 'datepicker',
                                       input_group_wrapper_class: 'input-group-sm',
                                       prepend: t('activerecord.attributes.request.to_date'),
                                       placeholder: t('helpers.request.help.temporal'),
                                       hide_label: true %>
          </div>
        </div>
      </div>

      <hr/>

      <div class="row">
        <div class="col-md-12">
          <div class="form-actions">
            <%= f.submit nil, class: 'btn btn-primary' %>
            <%= link_to t('helpers.links.cancel', default: 'Cancel'), requests_path, class: 'btn btn-default' %>
          </div>
        </div>

      </div>
    </div>

<% end %>