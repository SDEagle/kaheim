<%= custom_bootstrap_form_for @request do |f| %>
    <div class="edit">

      <div class="row">
        <%= f.text_area :title,
                         input_group_wrapper_class: 'input-group-lg col-md-12',
                         wrapper_class: 'title',
                         class: 'short-description',
                         append: (@request.title ? 140 - @request.title.length : 140).to_s,
                         placeholder: t('helpers.request.placeholder.title'),
                         hide_label: true %>
      </div>

      <hr/>

      <div class="row">
        <div class="col-md-8">
          <%= f.text_area :description, wrapper_class: 'description', hide_label: true, placeholder: t('helpers.request.placeholder.description'), help: ('<span class="warning"><i class="fa fa-shield"></i> ' + t('helpers.request.help.description') + '</span>').html_safe %>
        </div>

        <div class="col-md-4">
          <div class="info">
            <div class="btn-group input-group input-group-sm gender">
              <span class="input-group-addon"><%= t('helpers.request.help.gender-selection') %></span>
              <button id="gender-select-button" type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
                <% case @request.gender %>
                <% when 'female' %>
                  <i class="fa fa-female"></i>
                <% when 'male' %>
                  <i class="fa fa-male"></i>
                <% else %>
                  <span class="dontcare"><i class="fa fa-female"></i>/<i class="fa fa-male"></i></span>
                <% end %>
                <span class="caret"></span></button>
              <ul class="dropdown-menu dropdown-menu-auto" role="menu">
                <li class="gender-select-item" data-gender='female'><a href="javascript:void(0);"><span class="gender-label"><i class='fa fa-female'></i></span></a></li>
                <li class="gender-select-item" data-gender='male'><a href="javascript:void(0);"><span class="gender-label"><i class='fa fa-male'></i></span></a></li>
                <li class="gender-select-item" data-gender='dontcare'><a href="javascript:void(0);" class="dontcare"><span class="gender-label"><i class='fa fa-male'></i>/<i class='fa fa-female'></i></span></a></li>
              </ul>
              <%= f.hidden_field :gender, value: 'dontcare' %>
            </div>
            <%= f.localized_text_field :from_date,
                                       'data-behaviour' => 'datepicker',
                                       input_group_wrapper_class: 'input-group-sm',
                                       prepend: t('activerecord.attributes.request.from_date'),
                                       hide_label: true %>
            <%= f.localized_text_field :to_date,
                                       'data-behaviour' => 'datepicker',
                                       input_group_wrapper_class: 'input-group-sm',
                                       prepend: t('activerecord.attributes.request.to_date'),
                                       placeholder: t('helpers.request.help.temporal'),
                                       hide_label: true %>
          </div>
        </div>
      </div>

      <hr/>

      <div class="row">
        <div class="col-md-1 explanation">
          <i class="fa fa-info icon"></i>
        </div>
        <div class="col-md-11">
          <%= t 'helpers.request.explanation' %>
        </div>
      </div>

      <hr/>

      <div class="row">
        <div class="col-md-12">
          <div class="form-actions">
            <%= f.submit nil, class: 'btn btn-primary' %>
            <%= link_to t('helpers.links.cancel', default: 'Cancel'), requests_path, class: 'btn btn-default' %>
          </div>
        </div>

      </div>
    </div>

<% end %>