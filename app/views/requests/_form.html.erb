<%=form_for @request, html: {class: 'form-inline'} do |f| %>
    <div class="edit">
      <div class="input-group input-group-lg title">
        <span class="input-group-addon"><%= t('activerecord.attributes.request.title') %></span>
        <%= f.text_field :title, :class => 'form-control', hide_label: true, placeholder: t('activerecord.attributes.request.title') %>
      </div>

      <div class="info">
        <div class='form-control gender'>
          <%= f.radio_button :gender, 'female' %><span class="gender-label"><i class='fa fa-male'></i></span>
          <%= f.radio_button :gender, 'male' %><span class="gender-label"><i class='fa fa-female'></i></span>
        </div>
        <div class="input-group input-group-sm">
          <span class="input-group-addon"><%= t('activerecord.attributes.request.from_date') %></span>
          <%= f.text_field :from_date, hide_label: true, :class => 'form-control', 'data-behaviour' => 'datepicker' %>
        </div>
        <div class="input-group input-group-sm">
          <span class="input-group-addon"><%= t('activerecord.attributes.request.to_date') %></span>
          <%= f.text_field :to_date, hide_label: true, class: 'form-control', 'data-behaviour' => 'datepicker' %>
        </div>
      </div>

      <% if @request.description %>
          <%= f.text_area :description, :class => 'form-control description', hide_label: true, placeholder: @request.description %>
      <% else %>
          <%= f.text_area :description, :class => 'form-control description', hide_label: true, placeholder: t('activerecord.attributes.request.description') %>
      <% end %>
    </div>

    <div class="form-actions">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('helpers.links.cancel', :default => 'Cancel'), requests_path, :class => 'btn btn-default' %>
    </div>
<% end %>