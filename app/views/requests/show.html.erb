<%- model_class = Request -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human %></h1>
</div>

<div class="item">

  <div class="titel"><strong><%= @request.title %></strong></div>

  <div class="until">
    <table class="request-specifics">
      <tbody>
      <tr>
        <td class="gender">
          <% case @request.gender %>
          <% when 'dontcare' %>
            <i class="fa fa-female"></i>/<i class="fa fa-male"></i>
          <% when 'female' %>
            <i class="fa fa-female"></i>
          <% when 'male' %>
            <i class="fa fa-male"></i>
          <% end %>
        </td>
          <% if @request.from_date && !@request.from_date.past? %>
            <td class="time">
              <%=t '.from' %> <%=l @request.from_date %>
            </td>
          <% else %>
            <td class="time">
              <%=t '.now' %>
            </td>
          <% end %>
          <% if @request.to_date %>
            <td class="time">
              <%=t '.to' %> <%=l @request.to_date %>
            </td>
          <% end %>
      </tr>
      </tbody>
    </table>
  </div>

  <div class="description">
    <%= simple_format @request.description %>
  </div>
  <div class="contact">
    <% if current_user == @request.user %>
      <strong><span class="label label-danger"><%= t "helpers.mine"  %></span></strong>
    <% else %>
      <strong><span class="label label-info"><%= @request.user.name %></span></strong>
    <% end %>
  </div>
</div>

<hr />

<% if current_user != @request.user %>
  <%= render 'answers/form', object: @request %>
<% end %>

<div class="form-actions">
  <%= link_to t('helpers.links.back', default: 'Back'),
              requests_path, class: 'btn'  %>
  <% if current_user == @request.user %>
    <%= link_to t('helpers.links.edit', default: 'edit'),
                edit_request_path(@request), class: 'btn' %>
    <%= link_to t('helpers.links.destroy', default: 'Delete'),
                request_path(@request),
                method: 'delete',
                data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
                class: 'btn btn-danger' %>
  <% end %>
</div>
