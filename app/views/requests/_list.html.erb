<div class="page-header">
  <h1><%=t 'requests.list.title', count: requests.count %></h1>
  <% if user_signed_in? %>
      <%= link_to t('requests.new.title'), new_request_path, class: 'btn btn-primary' %>
  <% else %>
      <strong><%=t 'helpers.sign_in_for_request' %></strong>
  <% end %>
</div>

<% requests.each do |request| %>
<fieldset class="item">
  <%= badges_for request %>

  <div class="titel">
    <strong><%= request.title %></strong>
  </div>

  <table class="request-specifics">
    <tbody>
    <tr>
      <td class="gender">
        <% case request.gender %>
        <% when 'dontcare' %>
            <i class="fa fa-female"></i>/<i class="fa fa-male"></i>
        <% when 'female' %>
            <i class="fa fa-female"></i>
        <% when 'male' %>
            <i class="fa fa-male"></i>
        <% end %>
      </td>
        <% if request.from_date && !request.from_date.past? %>
          <td class="time">
            <%=t 'requests.show.from' %> <%=l request.from_date %>
          </td>
        <% else %>
          <td class="time">
            <%=t 'requests.show.now' %>
          </td>
        <% end %>
        <% if request.to_date %>
          <td class="time">
            <%=t 'requests.show.to' %> <%=l request.to_date %>
          </td>
        <% end %>
    </tr>
    </tbody>
  </table>

  <div class="description">
    <div class="short"></div>
    <div class="long"><%= simple_format request.description %></div>
  </div>

  <div class="contact">
    <div class="inline-button toggle-collapse">
      <div class="short"><%= t 'helpers.more' %>&#x25BC;</div>
      <div class="long"><%= t 'helpers.less' %>&#x25B2;</div>
    </div>

    <div class="inline-button answer">
      <%= link_to request do %>
        <%= t("helpers.#{current_user == request.user ? 'show' : 'answer'}") %>
      <% end %>
    </div>
    <span>&nbsp;|&nbsp;<%= t("requests.show.user", name: request.user.name) %></span>
  </div>
</fieldset>
<% end %>