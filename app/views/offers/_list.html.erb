<% offers.each do |offer| %>
    <fieldset class="item">
      <%= badges_for offer %>

      <div class="titel">
        <strong><%= offer.title %></strong>
      </div>

      <table class="offer-specifics">
        <tbody>
        <tr>
          <td class="icon">
          </td>
          <td class="info">
            <% case offer.gender %>
            <% when 'dontcare' %>
              <i class="fa fa-female"></i>/<i class="fa fa-male"></i>
            <% when 'female' %>
              <i class="fa fa-female"></i>
            <% when 'male' %>
              <i class="fa fa-male"></i>
            <% end %>
          </td>
          <td class="icon">
            <i class="fa fa-eur"></i>
          </td>
          <td class="info">
            <%= offer.rent %>
          </td>
        </tr>
        <tr>
          <td class="icon">
            <i class="fa fa-square-o"></i>
          </td>
          <td class="info">
            <%= offer.size %>mÂ²
          </td>
          <td class="icon">
            <i class="fa fa-long-arrow-right"></i>
          </td>
          <td class="info">
            <%=t 'offers.show.from' %> <%= (l offer.from_date) %>
            <% if offer.to_date %>
                <%=t 'offers.show.to' %> <%= (l offer.to_date) %>
            <% end %>
          </td>
        </tr>
        <tr>
          <td class="icon">
            <i class="fa fa-home"></i>
          </td>
          <td class="info" colspan="3">
            <%= offer.district + ", " + offer.street %>
          </td>
        </tr>
        </tbody>
      </table>

      <div class="description">
        <div class="short"></div>
        <div class="long"><%= simple_format offer.description %></div>
      </div>

      <div class="contact">
        <div class="inline-button toggle-collapse">
          <div class="short"><%= t 'helpers.more' %>&#x25BC;</div>
          <div class="long"><%= t 'helpers.less' %>&#x25B2;</div>
        </div>

        <div class="inline-button answer">
          <%= link_to offer do %>
            <%= t("helpers.#{current_user == offer.user ? 'show' : 'answer'}") %>
          <% end %>
        </div>
        <span>&nbsp;|&nbsp;<%= t("offers.show.user", name: offer.user.name) %></span>
      </div>
    </fieldset>
<% end %>