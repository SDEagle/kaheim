<% offers.each do |offer| %>
    <fieldset class="item sort-item" data-rent="<%= offer.rent %>" data-size="<%= offer.size %>" data-from-date="<%= offer.from_date.to_time.to_i %>" data-updated-at="<%= offer.updated_at.to_i %>">
      <%= badges_for offer %>

      <div class="title">
        <strong><%= link_to offer.title, offer %></strong>
      </div>

      <table class="offer-specifics">
        <tbody>
        <tr>
          <td class="icon">
          </td>
          <td class="info">
            <%= gender_icon offer.gender %>
          </td>
          <td class="icon">
            <i class="fa fa-eur"></i>
          </td>
          <td class="info">
            <%= offer.rent %>
          </td>
        </tr>
        <tr>
          <td class="icon">
            <i class="fa fa-square-o"></i>
          </td>
          <td class="info">
            <%= offer.size %>mÂ²
          </td>
          <td class="icon">
            <i class="fa fa-long-arrow-right"></i>
          </td>
          <td class="info">
            <%= date_info offer %>
          </td>
        </tr>
        <tr>
          <td class="icon">
            <i class="fa fa-home"></i>
          </td>
          <td class="info" colspan="3">
            <%= address_info offer %>
          </td>
        </tr>
        </tbody>
      </table>

      <div class="description">
        <div class="short"></div>
        <div class="long"><%= simple_format offer.description %></div>
      </div>

      <div class="contact">
        <div class="inline-button toggle-collapse">
          <div class="short"><%= t 'helpers.more' %>&#x25BC;</div>
          <div class="long"><%= t 'helpers.less' %>&#x25B2;</div>
        </div>

        <div class="inline-button answer">
          <%= link_to offer do %>
            <%= t("helpers.#{current_user == offer.user ? 'show' : 'answer'}") %>
          <% end %>
        </div>
        <span>&nbsp;|&nbsp;<%= t("offers.show.user", name: offer.user.name) %></span>
      </div>
    </fieldset>
<% end %>