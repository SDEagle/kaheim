<%= bootstrap_form_for(Subscription.new, as: :subscription, url: subscription_create_path) do |f| %>
  <%= t 'subscriptions.subscribe' %>
  <%= f.email_field :email,
                    class: 'text_field',
                    label: false %>
  <%= f.hidden_field :offers %>
  <%= f.submit t('subscriptions.subscribe'), class: 'btn btn-primary pull-right subscription-toggle' %>
<% end %>
