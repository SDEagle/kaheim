<%= custom_bootstrap_form_for @offer, layout: :inline do |f| %>
    <div class="edit">

      <%= f.text_field :title,
                       input_group_wrapper_class: 'input-group-lg',
                       wrapper_class: 'title',
                       prepend: t('activerecord.attributes.offer.title'),
                       hide_label: true %>

      <div class="info">
        <div class='form-control gender'>
          <%= f.radio_button :gender, 'dontcare', checked: true %><span class="gender-label"><i class='fa fa-male'></i>/<i class='fa fa-female'></i></span>
          <%= f.radio_button :gender, 'female' %><span class="gender-label"><i class='fa fa-male'></i></span>
          <%= f.radio_button :gender, 'male' %><span class="gender-label"><i class='fa fa-female'></i></span>
        </div>

        <%= f.text_field :rent,
                         placeholder: t('activerecord.attributes.offer.rent'),
                         wrapper_class: 'rent',
                         prepend: '<i class="fa fa-eur"></i>'.html_safe,
                         hide_label: true %>
        <%= f.text_field :size,
                         placeholder: t('activerecord.attributes.offer.size'),
                         wrapper_class: 'size',
                         prepend: 'mÂ²',
                         hide_label: true %>
      </div>

      <div class="date">
        <%= f.localized_text_field :from_date,
                                   'data-behaviour' => 'datepicker',
                                   input_group_wrapper_class: 'input-group-sm',
                                   prepend: t('activerecord.attributes.offer.from_date'),
                                   hide_label: true %>
        <%= f.localized_text_field :to_date,
                                   'data-behaviour' => 'datepicker',
                                   input_group_wrapper_class: 'input-group-sm',
                                   prepend: t('activerecord.attributes.offer.to_date'),
                                   hide_label: true %>
      </div>

      <div class="location">
        <%= f.text_field :street, hide_label: true, placeholder: t('activerecord.attributes.offer.street') %>
        <%= f.text_field :zip_code, hide_label: true, placeholder: t('activerecord.attributes.offer.zip_code') %>
        <%= f.text_field :district, hide_label: true, placeholder: t('activerecord.attributes.offer.district') %>
      </div>

      <%= f.text_area :description, wrapper_class: 'description', hide_label: true, placeholder: t('activerecord.attributes.offer.description') %>
    </div>

    <div class="form-actions">
      <%= f.submit nil, class: 'btn btn-primary' %>
      <%= link_to t('helpers.links.cancel', default: 'Cancel'), offers_path, class: 'btn btn-default' %>
    </div>
<% end %>