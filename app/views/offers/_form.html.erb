<%= bootstrap_form_for @offer do |f| %>
    <div class="offer">
      <div class="title">
        <%= f.text_field :title, :class => 'text_field', hide_label: true, layout: :inline, placeholder: t('activerecord.attributes.offer.title'), help: t('activerecord.attributes.offer.help.title') %>
      </div>
      <div class="description">
        <% if @offer.description %>
            <%= f.text_area :description, :class => 'text_area', hide_label: true, placeholder: @offer.description %>
        <% else %>
            <%= f.text_area :description, :class => 'text_area', hide_label: true, placeholder: t('activerecord.attributes.offer.description') %>
        <% end %>
      </div>
      <div class="rent">
        <%= f.text_field :rent, :class => 'text_field' %>
      </div>
      <div class="size">
        <%= f.text_field :size, :class => 'text_field' %>
      </div>
      <div class="gender">
        <%= f.text_field :gender, :class => 'text_field' %>
      </div>
      <div class="from_date">
        <%= f.date_select :from_date, :class => 'date_select' %>
      </div>
      <div class="to_date">
        <%= f.date_select :to_date, :class => 'date_select' %>
      </div>
      <div class="district">
        <%= f.text_field :district, :class => 'text_field' %>
      </div>
      <div class="street">
        <%= f.text_field :street, :class => 'text_field' %>
      </div>
      <div class="zip_code">
        <%= f.text_field :zip_code, :class => 'text_field' %>
      </div>
    </div>
    <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('helpers.links.cancel', :default => 'Cancel'),
                offers_path, :class => 'btn' %>
    </div>
<% end %>