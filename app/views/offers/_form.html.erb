<%= custom_bootstrap_form_for @offer do |f| %>
    <div class="edit container-fluid">

      <div class="row">
        <%= f.text_area :title,
                        input_group_wrapper_class: 'input-group-lg col-md-12',
                        wrapper_class: 'title',
                        class: 'short-description',
                        append: (@offer.title ? 140 - @offer.title.length : 140).to_s,
                        placeholder: t('helpers.offer.help.title'),
                        hide_label: true %>
      </div>

      <hr/>

      <div class="row">
        <div class="col-md-8">
          <%= f.text_area :description, wrapper_class: 'description', hide_label: true, placeholder: t('helpers.offer.help.description') %>
        </div>

        <div class="col-md-4">
          <div class="info">
            <div class='form-group gender'>
              <%= f.radio_button :gender, 'dontcare', checked: true, label: '<span class="gender-label"><i class="fa fa-male"></i>/<i class="fa fa-female"></i></span>'.html_safe %>
              <%= f.radio_button :gender, 'female', label: '<span class="gender-label"><i class="fa fa-male"></i></span>'.html_safe %>
              <%= f.radio_button :gender, 'male', label: '<span class="gender-label"><i class="fa fa-female"></i></span>'.html_safe %>
            </div>

            <%= f.text_field :rent,
                             placeholder: t('activerecord.attributes.offer.rent'),
                             wrapper_class: 'rent',
                             input_group_wrapper_class: 'input-group-sm',
                             prepend: '<i class="fa fa-eur"></i>'.html_safe,
                             hide_label: true %>
            <%= f.text_field :size,
                             placeholder: t('activerecord.attributes.offer.size'),
                             wrapper_class: 'size',
                             input_group_wrapper_class: 'input-group-sm',
                             prepend: 'mÂ²',
                             hide_label: true %>
          </div>

          <div class="date">
            <%= f.localized_text_field :from_date,
                                       'data-behaviour' => 'datepicker',
                                       input_group_wrapper_class: 'input-group-sm',
                                       prepend: t('activerecord.attributes.offer.from_date'),
                                       hide_label: true %>
            <%= f.localized_text_field :to_date,
                                       'data-behaviour' => 'datepicker',
                                       input_group_wrapper_class: 'input-group-sm',
                                       prepend: t('activerecord.attributes.offer.to_date'),
                                       placeholder: t('helpers.request.help.temporal'),
                                       hide_label: true %>
          </div>

          <div class="location">
            <%= f.text_field :street, hide_label: true, placeholder: t('activerecord.attributes.offer.street') %>
            <%= f.text_field :zip_code, hide_label: true, placeholder: t('activerecord.attributes.offer.zip_code') %>
            <%= f.text_field :district, hide_label: true, placeholder: t('activerecord.attributes.offer.district') %>
          </div>
        </div>
      </div>

      <hr/>

      <div class="row">
        <div class="col-md-12">
          <div class="form-actions">
            <%= f.submit nil, class: 'btn btn-primary' %>
            <%= link_to t('helpers.links.cancel', default: 'Cancel'), offers_path, class: 'btn btn-default' %>
          </div>
        </div>
      </div>

    </div>

<% end %>