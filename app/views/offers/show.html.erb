<%- model_class = Offer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<div class="offer">

  <div class="titel"><strong><%= @offer.title %></strong></div>

  <div class="until"><strong>
  <div class="specifics">
    <span class="label gender label-default">m/w</span>
    <span class="label money label-default">250€</span>
    <span class="label space label-default">20m²</span>
    <span class="label time label-default"><%= model_class.human_attribute_name(:until) + " " + (l @offer.until) %></span>
    <span class="label label-default">(bis)</span>
  </div>
  </strong></div>

  <div class="description">
    <%= simple_format @offer.description %>
  </div>
  <div class="contact">
    <% if current_user == @offer.user %>
        <strong><span class="label label-info"><%= t "helpers.mine"  %></span></strong>
    <% else %>
        <strong><%= t 'helpers.author' %>: <%= @offer.user.name %></strong>
    <% end %>
  </div>
</div>

<hr />

<% if current_user != @offer.user %>
  <%= render 'answers/form', object: @offer %>
<% end %>

<div class="form-actions">
  <%= link_to t('helpers.links.back', :default => 'Back'),
              offers_path, :class => 'btn' %>
  <% if current_user == @offer.user %>
    <%= link_to t('helpers.links.edit', :default => 'Edit'),
                edit_offer_path(@offer), :class => 'btn' %>
    <%= link_to t('helpers.links.destroy', :default => 'Delete'),
                offer_path(@offer),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  <% end %>
</div>
