<div class="page-header">
  <h1>
    <% if @offer.user == current_user %>
      <%=t '.title.mine' %>
    <% else %>
      <%=t '.title.other', name: @offer.user.name %>
    <% end %>
  </h1>
  <% if current_user and current_user.is_admin? %>
    <% if @offer.user.unlocked? %>
      <%= link_to t('users.lock.lock'), lock_offer_path, class: 'btn btn-default' %>
    <% else %>
      <%= link_to t('users.lock.unlock'), unlock_offer_path, class: 'btn btn-default' %>
    <% end %>
  <% end %>
</div>

<div class="item">

  <%= badges_for @offer %>
  <div class="titel"><strong><%= @offer.title %></strong></div>

  <div class="until">
    <table class="offer-specifics">
      <tbody>
      <tr>
        <td class="icon">
        </td>
        <td class="info">
          <% case @offer.gender %>
          <% when 'dontcare' %>
            <i class="fa fa-female"></i>/<i class="fa fa-male"></i>
          <% when 'female' %>
            <i class="fa fa-female"></i>
          <% when 'male' %>
            <i class="fa fa-male"></i>
          <% end %>
        </td>
        <td class="icon">
          <i class="fa fa-eur"></i>
        </td>
        <td class="info">
          <%= @offer.rent %>
        </td>
      </tr>
      <tr>
        <td class="icon">
          <i class="fa fa-square-o"></i>
        </td>
        <td class="info">
          <%= @offer.size %>mÂ²
        </td>
        <td class="icon">
          <i class="fa fa-long-arrow-right"></i>
        </td>
        <td class="info">
          <%=t '.from' %> <%= (l @offer.from_date) %>
        </td>
        <td class="info">
          <% if @offer.to_date %>
            <%=t '.to' %> <%= (l @offer.to_date) %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td class="icon">
          <i class="fa fa-home"></i>
        </td>
        <td class="info" colspan="4">
          <%= @offer.district + ", " + @offer.street %>
        </td>
      </tr>
      </tbody>
    </table>
  </div>

  <div class="description">
    <%= simple_format @offer.description %>
  </div>
</div>

<hr />

<% if current_user != @offer.user %>
  <%= render 'answers/form', object: @offer %>
<% end %>

<div class="form-actions">
  <%= link_to t('helpers.links.back', default: 'Back'),
              offers_path, class: 'btn btn-default' %>
  <% if current_user == @offer.user %>
    <%= link_to t('helpers.links.edit', default: 'Edit'),
                edit_offer_path(@offer), class: 'btn btn-default' %>
    <%= link_to t('helpers.links.destroy', default: 'Delete'),
                offer_path(@offer),
                method: 'delete',
                data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
                class: 'btn btn-danger' %>
  <% end %>
</div>
