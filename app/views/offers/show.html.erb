<%- model_class = Offer -%>
<div class="page-header">
  <h1><%=t '.title', default: model_class.model_name.human %></h1>
</div>

<div class="item">

  <div class="titel"><strong><%= @offer.title %></strong></div>

  <div class="until">
    <table class="offer-specifics">
      <tbody>
      <tr>
        <td class="icon">
          <i class="fa fa-female"></i>/<i class="fa fa-male"></i>
        </td>
        <td class="info">
          <%= t "helpers.gender.#{@offer.gender}" %>
        </td>
        <td class="icon">
          <i class="fa fa-eur"></i>
        </td>
        <td class="info">
          <%= @offer.rent %>
        </td>
      </tr>
      <tr>
        <td class="icon">
          <i class="fa fa-square-o"></i>
        </td>
        <td class="info">
          <%= @offer.size %>mÂ²
        </td>
        <td class="icon">
          <i class="fa fa-long-arrow-right"></i>
        </td>
        <td class="info">
          <%=t '.from' %> <%= (l @offer.from_date) %>
        </td>
        <td class="info">
          <% if @offer.to_date %>
            <%=t '.to' %> <%= (l @offer.to_date) %>
          <% end %>
        </td>
      </tr>
      <tr>
        <td class="info address" colspan="5"><%= @offer.district + ", " + @offer.street %></td>
      </tr>
      </tbody>
    </table>
  </div>

  <div class="description">
    <%= simple_format @offer.description %>
  </div>
  <div class="contact">
    <%= badges_for @offer %>
  </div>
</div>

<hr />

<% if current_user != @offer.user %>
  <%= render 'answers/form', object: @offer %>
<% end %>

<div class="form-actions">
  <%= link_to t('helpers.links.back', default: 'Back'),
              offers_path, class: 'btn' %>
  <% if current_user == @offer.user %>
    <%= link_to t('helpers.links.edit', default: 'Edit'),
                edit_offer_path(@offer), class: 'btn' %>
    <%= link_to t('helpers.links.destroy', default: 'Delete'),
                offer_path(@offer),
                method: 'delete',
                data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Are you sure?')) },
                class: 'btn btn-danger' %>
  <% end %>
</div>
