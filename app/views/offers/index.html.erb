<%= render partial: 'shared/list_page_header', locals: { count: @offers.count, item: 'offer', header_class: 'page-header'} %>
<% if @offers.count > 1 %>
  <div class="row">
    <div class="dropdown pull-right" id="sort-button">
      <%= render 'shared/sort_menu' %>
    </div>
  </div>
<% end %>
<div class="row">
  <div class="sort">
    <%= render partial: 'list', locals: { offers: @offers } %>
  </div>
</div>
