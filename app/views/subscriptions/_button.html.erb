<% if user_signed_in? %>
  <% if user_subscribed(current_user, item_type) %>

    <%= custom_bootstrap_form_for(Subscription.new, as: :subscription, url: subscriptions_unsubscribe_user_path, method: :delete, layout: :inline) do |f| %>
      <%= f.hidden_field item_type, value: true %>
      <button class="btn btn-default pull-right top-align" id="subscribed-button">
        <span class="subscribed-button-content"><i class='fa fa-check'></i> <%= t('subscriptions.subscribed') %></span>
        <span class="subscribed-button-content" style="display:none;"><i class='fa fa-times'></i> <%= t('subscriptions.actions.unsubscribe') %></span>
      </button>
    <% end %>
  <% else %>
    <%= custom_bootstrap_form_for(Subscription.new, as: :subscription, url: subscriptions_create_path, layout: :inline) do |f| %>
      <%= f.hidden_field item_type, value: true %>
      <%= f.hidden_field :email,
                         value: current_user.email %>
      <button class="btn btn-primary pull-right top-align" id="subscribe-button">
        <%= t('subscriptions.actions.subscribe') %>
      </button>
    <% end %>
  <% end %>

<% else %>
  <button class="btn btn-primary pull-right subscription-toggle top-align"><%= t 'subscriptions.actions.subscribe' %></button>
<% end %>
