<div class="page-header">
  <h2><%=t 'helpers.answer' %></h2>
</div>

<%= bootstrap_form_tag url: answers_path, layout: :horizontal do |f| %>
  <%= f.email_field :mail, value: user_signed_in? ? current_user.email : '', label: t('helpers.mail') %>
  <%= f.text_area :message, value: user_signed_in? ? current_user.email : '', label: t('helpers.message') %>
  <% unless user_signed_in? %>
    <%= f.form_group label: { text: 'Captcha' } do %>
      <%= recaptcha_tags ajax: true %>
    <% end %>
    <% end %>
  <%= f.form_group do %>
    <%= f.primary t('helpers.links.send') %>
  <% end %>

  <%= hidden_field_tag :type, object.class.to_s %>
  <%= hidden_field_tag :id, object.id %>
<% end %>
