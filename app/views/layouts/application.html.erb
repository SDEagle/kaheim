<!DOCTYPE html>
<html>
<head>
  <title>Wohnungsb√∂rse</title>
  <!--[if lt IE 9]>
  <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

<div id="wrap">
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container-fluid">

      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#kaheim-navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'Kaheim', root_path, class: 'navbar-brand' %>
      </div>


      <div class="collapse navbar-collapse" id="kaheim-navbar-collapse">

        <ul class="nav navbar-nav">
          <div class="btn-group">
            <button type="button" class="btn btn-default navbar-btn" data-link="<%= offers_path %>">
              <span class="badge badge-info"><%= (c = Offer.current.unlocked.count) > 0 ? c : '' %></span>
              <%= Offer.model_name.human count: c %>
            </button>
          </div>
          <div class="btn-group">
            <button type="button" class="btn btn-default navbar-btn" data-link="<%= requests_path %>">
              <span class="badge badge-info"><%= (c = Request.current.unlocked.count) > 0 ? c : '' %></span>
              <%= Request.model_name.human count: c %>
            </button>
          </div>
        </ul>

        <ul class="nav navbar-nav navbar-right">


          <% if user_signed_in? %>
            <li>
              <%= link_to t("helpers.signed_in_message", mail: current_user.email), edit_user_registration_path %>
            </li>
          <% else %>
              <li>
                <%= link_to t("helpers.links.sign_up"), new_user_registration_path %>
              </li>
              <li class="dropdown">
                <a class="dropdown-toggle" href="#" data-toggle="dropdown"><%= t("helpers.links.sign_in") %><strong class="caret"></strong></a>
                <div class="dropdown-menu" style="padding: 15px; width: 300px;">
                  <%= render partial: "devise/sessions/new" %>
                </div>
              </li>
          <% end %>
          <li id="locale-selection" data-current-locale="<%= I18n.locale %>">
            <% if I18n.locale == :de %>
                <%= link_to params.merge(locale: :en), class: 'locale_img' do %>
                    <%= image_tag 'en.png' %>
                <% end %>
            <% else %>
                <%= link_to params.merge(locale: :de), class: 'locale_img' do %>
                    <%= image_tag 'de.png' %>
                <% end %>
            <% end %>
          </li>

          <% if user_signed_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="fa fa-cog"></i>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <% if current_user.admin %>
                  <li><%= link_to 'Admin', '/admin' %></li>
              <% end %>
              <li>
                <%= link_to t("helpers.links.sign_out"), destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
          <% end %>
        </ul>

      </div>

    </div>
  </nav>

  <div class="container-fluid clear-top" id="main">
    <div class="col-md-2"></div>
    <div class="col-md-8">
      <!--<div class="row">-->
        <% { error: 'danger', alert: 'warning', notice: 'success', info: 'info' }.each do |k, v| %>
          <% if flash[k] %>
            <div class="alert alert-<%= v %> alert-dismissible" role="alert">
              <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
              <div id="flash_<%= k %>">
                <%= flash[k] %>
              </div>
            </div>
          <% end %>
        <% end %>
      <!--</div>-->
      <%= yield %>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>

<footer class="footer">
  <div class="container">
    <div class="supporters">
      <%= link_to 'http://www.smd-karlsruhe.de' do %>
        <%= image_tag 'logos/SMD-Logo.png', height: '31' %>
      <% end %>
    </div>
    <p><%= link_to t('helpers.contact'), page_path('contact') %></p>
  </div>
</footer>

</body>
</html>
